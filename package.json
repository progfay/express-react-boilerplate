{
  "name": "express-react-boilerplate",
  "version": "0.1.0",
  "dependencies": {
    "express": "^4.16.4",
    "react": "^16.6.1",
    "react-dom": "^16.6.1"
  },
  "scripts": {
    "start": "npm run client && npm run server",
    "dev": "concurrently \"npm run client:dev\" \"npm run server:dev\"",
    "client": "webpack --mode=production",
    "client:dev": "webpack --mode=development --watch --progress --colors",
    "server": "node src/server/index.js",
    "server:dev": "nodemon src/server/index.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.5",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.18.9",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  }
}
